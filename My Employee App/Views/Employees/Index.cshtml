@model List<My_Employee_App.Entities.Employee>

@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Salary
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Department
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var employee in Model)
        {
            <tr>
                <td>
                    @employee.Name
                </td>
                <td>
                    @employee.Email
                </td>
                <td>
                    @employee.Salary
                </td>
                <td>
                    @employee.DateOfBirth
                </td>
                <td>
                    @employee.Department
                </td>
                <td>
                    <a asp-action="View" asp-route-id="@employee.Id">View</a> |
                    <a asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>